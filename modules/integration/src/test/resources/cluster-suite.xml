<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ClusterTestSuite">
    <parameter name="broker-1-port" value="5672"/>
    <parameter name="broker-2-port" value="5673"/>

    <parameter name="broker-1-hostname" value="localhost"/>
    <parameter name="broker-2-hostname" value="localhost"/>

    <parameter name="admin-username" value="admin"/>
    <parameter name="admin-password" value="admin"/>

    <parameter name="db-username" value="wso2"/>
    <parameter name="db-password" value="wso2"/>

    <parameter name="db-hostname" value="localhost"/>
    <parameter name="db-port" value="3307"/>

    <listeners>
        <listener class-name="io.ballerina.messaging.broker.integration.util.TestExecutionListener"/>
    </listeners>

    <test name="cluster-tests" verbose="2">
        <groups>
            <run>
                <include name="KillTestClass"/>
                <include name="RestartTestClass"/>
                <include name="ShutdownTestClass"/>
                <include name="StartTestClass"/>
            </run>
        </groups>
        <classes>
            <class name="io.ballerina.messaging.broker.integration.cluster.KillTest"/>
            <class name="io.ballerina.messaging.broker.integration.cluster.ShutdownTest"/>
            <class name="io.ballerina.messaging.broker.integration.cluster.RestartTest"/>
            <class name="io.ballerina.messaging.broker.integration.cluster.StartTest"/>
        </classes>
    </test>
</suite>
